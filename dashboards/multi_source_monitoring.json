{
  "dashboard": {
    "title": "VAST Multi-Source Monitoring",
    "tags": ["vast", "advertising", "multi-source"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(vast_multi_source_requests_total[5m])",
            "legendFormat": "Total Requests",
            "refId": "A"
          },
          {
            "expr": "rate(vast_multi_source_requests_success[5m])",
            "legendFormat": "Successful Requests",
            "refId": "B"
          },
          {
            "expr": "rate(vast_multi_source_requests_failure[5m])",
            "legendFormat": "Failed Requests",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"label": "requests/sec", "show": true},
          {"show": true}
        ]
      },
      {
        "id": 2,
        "title": "Success Rate",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(vast_multi_source_requests_success[5m]) / rate(vast_multi_source_requests_total[5m]) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 80, "color": "yellow"},
                {"value": 95, "color": "green"}
              ]
            },
            "max": 100,
            "min": 0
          }
        }
      },
      {
        "id": 3,
        "title": "Latency (p50, p95, p99)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(vast_multi_source_latency_milliseconds_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(vast_multi_source_latency_milliseconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(vast_multi_source_latency_milliseconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"label": "milliseconds", "show": true},
          {"show": true}
        ]
      },
      {
        "id": 4,
        "title": "Active Requests",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "vast_multi_source_active_requests",
            "legendFormat": "Active Requests",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "requests", "show": true},
          {"show": true}
        ]
      },
      {
        "id": 5,
        "title": "Error Distribution",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "sum by (error_type) (rate(vast_multi_source_requests_failure[5m]))",
            "legendFormat": "{{error_type}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "Fallback Trigger Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "rate(vast_multi_source_fallback_triggered[5m])",
            "legendFormat": "Fallback Triggers/sec",
            "refId": "A"
          },
          {
            "expr": "rate(vast_multi_source_fallback_triggered[5m]) / rate(vast_multi_source_requests_total[5m]) * 100",
            "legendFormat": "Fallback %",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"label": "rate", "show": true},
          {"label": "percent", "show": true}
        ]
      },
      {
        "id": 7,
        "title": "Source-Level Success Rate",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "sum by (source_url) (rate(vast_multi_source_sources_success[5m])) / sum by (source_url) (rate(vast_multi_source_sources_attempted[5m])) * 100",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "source_url": "Source",
                "Value": "Success Rate (%)"
              }
            }
          }
        ]
      },
      {
        "id": 8,
        "title": "Fetch Duration by Strategy",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum by (fetch_strategy, le) (rate(vast_multi_source_fetch_duration_bucket[5m])))",
            "legendFormat": "{{fetch_strategy}} (p95)",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "milliseconds", "show": true},
          {"show": true}
        ]
      },
      {
        "id": 9,
        "title": "Parser Performance",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "rate(vast_parser_xml_parsed[5m])",
            "legendFormat": "Parsed/sec",
            "refId": "A"
          },
          {
            "expr": "rate(vast_parser_xml_failed[5m])",
            "legendFormat": "Failed/sec",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, rate(vast_parser_parse_duration_bucket[5m]))",
            "legendFormat": "p95 Parse Time (ms)",
            "refId": "C"
          }
        ]
      },
      {
        "id": 10,
        "title": "Tracking Events",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "targets": [
          {
            "expr": "sum by (event_type) (rate(vast_tracking_event_sent[5m]))",
            "legendFormat": "{{event_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "events/sec", "show": true},
          {"show": true}
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {
            "text": "Prometheus",
            "value": "Prometheus"
          }
        },
        {
          "name": "fetch_strategy",
          "type": "query",
          "query": "label_values(vast_multi_source_requests_total, fetch_strategy)",
          "current": {
            "text": "All",
            "value": "$__all"
          },
          "multi": true,
          "includeAll": true
        },
        {
          "name": "provider",
          "type": "query",
          "query": "label_values(vast_multi_source_requests_total, provider)",
          "current": {
            "text": "All",
            "value": "$__all"
          },
          "multi": true,
          "includeAll": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "enable": true,
          "iconColor": "green"
        }
      ]
    }
  }
}
